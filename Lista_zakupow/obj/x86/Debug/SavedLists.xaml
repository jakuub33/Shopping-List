<Page
    x:Class="Lista_zakupow.SavedLists"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lista_zakupow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="424" Height="492">

    <Grid x:ConnectionId='2' x:Name="gridMain" Background="#FF434242"                         >
        <Pivot x:ConnectionId='3' x:Name="pivotMain" Title="Zapisane listy" Visibility="Collapsed">
            <PivotItem x:ConnectionId='6' x:Name="pivot1" Header=""                        Visibility="Collapsed">
                <Grid>
                    <ListBox x:ConnectionId='15' x:Name="listboxItems1" Margin="50,10,50,92"/>
                    <Button x:ConnectionId='16' x:Name="btnEdit1" Content="EDYTUJ" Margin="0,311,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" FontSize="16"                       />
                    <Button x:ConnectionId='17' x:Name="btnDelete1" Content="USUŃ" Margin="0,351,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" FontSize="16" BorderBrush="#FFC22727"                         />
                </Grid>
            </PivotItem>
            <PivotItem x:ConnectionId='7' x:Name="pivot2" Header="" Visibility="Collapsed"                       >
                <Grid>
                    <ListBox x:ConnectionId='12' x:Name="listboxItems2" Margin="50,10,50,92"/>
                    <Button x:ConnectionId='13' x:Name="btnEdit2" Content="EDYTUJ" Margin="0,311,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" FontSize="16"                       />
                    <Button x:ConnectionId='14' x:Name="btnDelete2" Content="USUŃ" Margin="0,351,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" FontSize="16" BorderBrush="#FFC22727"                         />
                </Grid>
            </PivotItem>
            <PivotItem x:ConnectionId='8' x:Name="pivot3" Header=""                        Visibility="Collapsed">
                <Grid>
                    <ListBox x:ConnectionId='9' x:Name="listboxItems3" Margin="50,10,50,92"/>
                    <Button x:ConnectionId='10' x:Name="btnEdit3" Content="EDYTUJ" Margin="0,311,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" FontSize="16"                       />
                    <Button x:ConnectionId='11' x:Name="btnDelete3" Content="USUŃ" Margin="0,351,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" FontSize="16" BorderBrush="#FFC22727"                         />
                </Grid>
            </PivotItem>
        </Pivot>
        <TextBlock x:ConnectionId='4' x:Name="tbInfo" HorizontalAlignment="Center" Text="Nie utworzono żadnych list zakupów." TextWrapping="Wrap" VerticalAlignment="Center" FontSize="22"/>
        <Button x:ConnectionId='5' x:Name="btnBack" Content="POWRÓT DO MENU" Margin="248,10,0,0" VerticalAlignment="Top" Width="166" FontSize="16"                      />
    </Grid>
</Page>

